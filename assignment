	<script type="text/javascript">
		function myJsFunction(){
			var text1=document.getElementById('input1').value;
			if ( text1 != "" ){
			document.getElementById("demo1").innerHTML = "Book Title: " + text1;}
			
			var text2=document.getElementById('input2').value;
			if ( text1 != "" ){
			document.getElementById("demo2").innerHTML = "Book SubTitle: " + text2;}
			
			var text3=document.getElementById('input3').value;
			if ( text1 != "" ){
			document.getElementById("demo3").innerHTML = "Author Name: " + text3;}
				
			var text4=document.getElementById('selector1').value;
			if (text4 == "pink"){
				document.body.style.background = "pink ";}
			else if(text4 == "grey"){
				document.body.style.background = "grey no-repeat ";
			}
			else if(text4 == "green"){
				document.body.style.background = "green no-repeat ";
			}
			else if(text4 == "yellow"){
				document.body.style.background = "yellow no-repeat ";
			}
			else if(text4 == "black"){
				document.body.style.background = "black no-repeat ";
			}
			else if(text4 == "white"){
				document.body.style.background = "white no-repeat ";
			}
			else if(text4 == "blue"){
				document.body.style.background = "blue no-repeat ";
			}
			else if(text4 == "light-blue"){
				document.body.style.background = "light-blue no-repeat ";
			}
			else if(text4 == "orange"){
				document.body.style.background = "orange no-repeat ";
			}
			
			var text5=document.getElementById('input5').value;
			if ( text1 != "" ){
			document.getElementById("demo5").innerHTML = "publisher: " + text5;}
			
			var text6=document.getElementById("selector").value;
			if ( text1 != "" ){
			document.getElementById("demo6").innerHTML = "publishing year: " + text6;}
			}
	</script>
